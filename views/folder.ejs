<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= name %></title>
</head>
<body>
  <h1><%= name %></h1>
  <a href="/">Back</a>
  <% if (name !== "Home") { %>
    <a href="/folder/<%= id %>/update">Update folder</a>
  <% } %>
  <% files.forEach(function(file) { %>
    <p><%= file.name %></p>
  <% }); %>
</body>
</html>